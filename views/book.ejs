<%- include('partials/header', { title: 'Book with TripMate' }) %>

<!-- Use the same navbar (no need to rewrite it manually) -->
<%- include('partials/navbar') %>
<body class="light-navbar">

<!-- Hero Section -->
<section class="book-hero fade-in">
  <div class="container">
    <h1>Your Dream Journey Awaits</h1>
    <p class="hero-sub">
      Fill out the form below and our travel specialists will curate your perfect itinerary.
    </p>
  </div>
</section>

<!-- Booking Form -->
<section class="booking-form-section fade-in">
  <div class="booking-container">
   <form id="tripmateBookingForm" class="tripmate-form" onsubmit="return submitBooking(event)">

      
      <div class="form-group">
        <label for="destination">Select Destination</label>
       <select id="destination" name="destination" required>
  <option value="" disabled selected>Select your dream destination...</option>
  <% if (trips && trips.length > 0) { %>
    <% trips.forEach(trip => { %>
      <option value="<%= trip.destination %>" <%= selectedDestination === trip.destination ? 'selected' : '' %>>
        <%= trip.destination %>
      </option>
    <% }) %>
  <% } %>
</select>

      </div>
<div class="form-group">
  <label for="category">Select Category</label>
  <select id="category" name="category" required>
    <option value="" disabled selected>Select your trip category...</option>
    <option value="Honeymoons" <%= selectedCategory === 'Honeymoons' ? 'selected' : '' %>>Honeymoons</option>
    <option value="Family Adventures" <%= selectedCategory === 'Family Adventures' ? 'selected' : '' %>>Family Adventures</option>
    <option value="Adventure Escapes" <%= selectedCategory === 'Adventure Escapes' ? 'selected' : '' %>>Adventure Escapes</option>
    <option value="Cultural Journeys" <%= selectedCategory === 'Cultural Journeys' ? 'selected' : '' %>>Cultural Journeys</option>
    <option value="Luxury Cruises" <%= selectedCategory === 'Luxury Cruises' ? 'selected' : '' %>>Luxury Cruises</option>
    <option value="Solo Expeditions" <%= selectedCategory === 'Solo Expeditions' ? 'selected' : '' %>>Solo Expeditions</option>
  </select>
</div>

      <div class="form-group">
        <label>Full Name</label>
        <input type="text" id="fullname" name="fullname" placeholder="Enter your full name..." required />
      </div>

      <div class="form-group">
        <label>Email</label>
        <input type="email" id="email" name="email" placeholder="Enter your email..." required />
      </div>

      <div class="form-group">
        <label>Number of Passengers</label>
        <input type="number" id="passengers" name="passangers" min="1" placeholder="Total passengers..." required />
      </div>

      <div class="form-group">
        <label>Departure Date</label>
        <input type="date" id="departure" name="departure" required />
      </div>

      <div class="form-group">
        <label>Return Date</label>
        <input type="date" id="return" name="return" required />
      </div>

      <div class="form-group">
        <label>Expected Investment per Adult</label>
        <div class="budget-buttons">
          <button type="button">$3000–$5000</button>
          <button type="button">$5000–$8000</button>
          <button type="button">$8000–$12000</button>
          <button type="button">$12000+</button>
        </div>
      </div>

      <div class="form-group">
        <label>City of Departure</label>
        <input type="text" id="city" name="city" placeholder="City of departure..." required />
      </div>

      <div class="form-group">
        <label>Phone Number / WhatsApp</label>
        <input type="tel" id="phone" name="phone" placeholder="+961 71 123 456" required />
      </div>

      <div class="form-group">
        <label>Message (Optional)</label>
        <textarea id="message" name="message" placeholder="Tell us more about your trip..."></textarea>
      </div>

      <button type="submit" class="submit-btn">Send Booking Request</button>
    </form>

    <p class="form-note">
      This is where the most special journey of your life begins.
    </p>
  </div>
</section>

<%- include('partials/footer') %>