<%- include('partials/header', { title: 'TripMate | Login' }) %>
<body class="light-navbar"></body>
<%- include('partials/navbar') %>

<section class="auth-section fade-in">
  <div class="auth-container">
    <h1>Welcome Back</h1>
    <p>Log in to manage your bookings</p>

    <form id="loginForm">
      <div class="form-group">
        <label>Email:</label>
        <input type="email" id="loginEmail" required />
      </div>

      <div class="form-group">
        <label>Password:</label>
        <input type="password" id="loginPassword" required />
      </div>

      <button type="submit" class="btn-primary">Login</button>
      <p id="loginMessage"></p>
    </form>
    <p class="logout-text small-text">
  Want to logout? <a href="#" id="logoutLink">Click here</a>
</p>
  </div>
</section>

<script src="/js/script.js"></script>

<%- include('partials/footer') %>
