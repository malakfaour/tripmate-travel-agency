<%- include('partials/navbar') %>

<div class="page-container">

    <!-- ============================
         CONTACT FORM SECTION
    ============================ -->
    <section id="feedback" class="contact-form-section">

        <h2>Contact an Advisor</h2>
        <p>Fill out this form and our travel team will reach you soon.</p>

        <form action="/contact" method="POST" class="advisor-form lux-contact-form">

            <div class="form-group">
                <label>Full Name</label>
                <input type="text" name="fullName" placeholder="Full Name" required>
            </div>

            <div class="form-group">
                <label>Email Address</label>
                <input type="email" name="email" placeholder="Email Address" required>
            </div>

            <div class="form-group">
                <label>Subject</label>
                <input type="text" name="subject" placeholder="Subject" required>
            </div>

            <div class="form-group">
                <label>Your Message</label>
                <textarea name="message" placeholder="Your message..." required></textarea>
            </div>

            <button type="submit" class="lux-btn">Send Message</button>
        </form>
    </section>

    <!-- ============================
         WHERE TO FIND US SECTION
    ============================ -->
    <section class="where-to-find">

        <div class="find-content">

            <div class="address-block">
                <h1>Where to find us</h1>

                <h3>Our New York City office:</h3>
                <p>TripMate is headquartered in lower Manhattan.</p>

                <h3>Our Toronto office:</h3>
                <p>
                    1235 Bay Street, Suite 700<br>
                    Toronto, Ontario<br>
                    M5R 3K4
                </p>

                <p class="note"><em>Please note that visitors are accepted by appointment only.</em></p>

                <h3>Our mailing address:</h3>
                <p>
                    TripMate Travel Inc.<br>
                    228 Park Ave South, Suite 53272<br>
                    New York, NY 10003-1502
                </p>

                <p class="note"><em>Please use this address for all mail correspondence.</em></p>
            </div>

            <div class="address-image">
                <img src="/images/office.jpg" alt="New York Street View">
            </div>

        </div>
    </section>

</div>

